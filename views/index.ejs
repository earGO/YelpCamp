<% include partials/header %>

<% include partials/nav %>

<div class="container">
    <header class="jumbotron">

        <div class="container">
            <h1>Our Campgrounds</h1>
            <p>
                <a href="/" class="btn btn-primary btn-large">Go back</a>
                <a href="/campgrounds/new" class="btn btn-secondary btn-large">Add new Campground</a>
            </p>
        </div>
    </header>
<main>
    <div class="row gridr">
        <%campgrounds.forEach((camp) => {%>
            <div class="col-md-4 col-sm-6">
                <div class="img-thumbnail img-fluid text-center text-capitalize thumb">
                    <img class='thumbsUp' src=<%=camp.imgSrc%>>
                    <div class="caption"><h5><span class="bold"><%= camp.name%></span></h5></div>
                    <p>
                        <a href="/campgrounds/<%=camp._id %>" class="btn btn-primary">More</a>
                    </p>
                </div>

            </div>
        <%})%>
    </div>
</main>



</div>
<% include partials/footer %>